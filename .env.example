# Server Configuration
FLASK_SECRET_KEY=replace-this-with-a-random-secure-string

# Spotify API Credentials
SPOTIFY_CLIENT_ID=your-spotify-client-id-here
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret-here
SPOTIFY_LYRICS_SERVER=https://your-spotify-lyrics-server-url.com

# NetEase Cookie (optional, a default one is already provided)
# NETEASE_COOKIE=your-netease-cookie-here

# Development Settings
DEBUG=false # true or false
LOG_LEVEL=DEBUG  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# System Settings
ENABLE_PARALLEL_FETCH=true
ENABLE_PROVIDER_STATS=false
ENABLE_AUTO_THEME=true
ENABLE_ALBUM_ART_COLORS=true

# Cache Settings
CACHE_DURATION_DAYS=30
MAX_CACHE_SIZE_MB=50

# UI Settings
DEFAULT_THEME=dark  # Options: dark, light
MINIMAL_MODE=false 