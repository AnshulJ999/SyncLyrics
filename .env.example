# ===========================================
# SyncLyrics Environment Variables
# ===========================================
# IMPORTANT: Environment variable naming convention
# 
# Settings that use conf("category.setting") in config.py are converted as:
#   category.setting → CATEGORY_SETTING (uppercase, dots become underscores)
# 
# Examples:
#   debug.enabled → DEBUG_ENABLED
#   features.parallel_provider_fetch → FEATURES_PARALLEL_PROVIDER_FETCH
#   storage.cache.duration_days → STORAGE_CACHE_DURATION_DAYS
#
# Direct os.getenv() calls use the exact variable name (e.g., SPOTIFY_CLIENT_ID)
# ===========================================

# Server Configuration

# QUART_SECRET_KEY=            # replace-this-with-a-random-secure-string
SERVER_PORT=9012

# Spotify API Credentials

SPOTIFY_CLIENT_ID=                     # your-spotify-client-id-here
SPOTIFY_CLIENT_SECRET=                 # your-spotify-client-secret-here

# For best performance, host your own instances of https://github.com/akashrchandran/spotify-lyrics-api

SPOTIFY_BASE_URL=           # https://fake-spotify-lyrics-api-azure.vercel.app
SPOTIFY_REDIRECT_URI=http://127.0.0.1:9012/callback

# SPOTIFY_TIMEOUT=10

# Spotify Token Cache Path (for persistent OAuth tokens)
# In HAOS, set to /config/.spotify_cache for persistence

SPOTIPY_CACHE_PATH=.cache

# Album Art & Lyrics API Keys

LASTFM_API_KEY=              # your_api_key_here

# Artist Image Providers

# FanArt.tv API Key (optional - for high-quality artist images)
# Get your personal API key by making a $2 donation at https://fanart.tv/
# Without this key, FanArt.tv will be disabled but other sources (Deezer, TheAudioDB) will still work

FANART_TV_API_KEY=     # your_fanart_api_key_here

# AUDIODB_API_KEY=123  # Free test key (add this line)


# NetEase Settings

# PROVIDERS_NETEASE_COOKIE=your-netease-cookie-here (not necessary as we have a default one)

# Development Settings
# Note: All debug.* settings use DEBUG_ prefix (e.g., debug.enabled → DEBUG_ENABLED)

DEBUG_ENABLED=false
DEBUG_LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
DEBUG_LOG_FILE=synclyrics.log
DEBUG_LOG_TO_CONSOLE=true
DEBUG_LOG_DETAILED=false
DEBUG_PERFORMANCE_LOGGING=false
DEBUG_LOG_PROVIDERS=true
DEBUG_LOG_POLLING=true

# System Settings
# Note: All features.* settings use FEATURES_ prefix (e.g., features.parallel_provider_fetch → FEATURES_PARALLEL_PROVIDER_FETCH)

FEATURES_PARALLEL_PROVIDER_FETCH=true
FEATURES_PROVIDER_STATS=false
FEATURES_AUTO_THEME=true
FEATURES_ALBUM_ART_COLORS=true
FEATURES_SHOW_LYRICS_SOURCE=true
FEATURES_SAVE_LYRICS_LOCALLY=true
FEATURES_MINIMAL_UI=false
FEATURES_ALBUM_ART_DB=true

# Cache Settings
# Note: All storage.* settings use STORAGE_ prefix (e.g., storage.cache.duration_days → STORAGE_CACHE_DURATION_DAYS)

STORAGE_CACHE_DURATION_DAYS=30
STORAGE_CACHE_MAX_SIZE_MB=50
STORAGE_CACHE_MEMORY_ITEMS=100
STORAGE_LYRICS_DB_MAX_SIZE_MB=100
STORAGE_LYRICS_DB_ENABLED=true
STORAGE_CACHE_ENABLED=true

# UI Settings
# Note: UI settings use UI_ prefix (e.g., ui.minimal_mode.enabled → UI_MINIMAL_MODE_ENABLED)

UI_MINIMAL_MODE_ENABLED=false

# ===========================================
# HAOS / Docker Persistent Storage Paths
# ===========================================
# Set these to persistent paths in containerized environments
# In Home Assistant OS, use /config/* for persistence (addon_config mount)
# These are read directly via os.getenv(), not through conf()
#
# SYNCLYRICS_SETTINGS_FILE=/config/settings.json
# SYNCLYRICS_STATE_FILE=/config/state.json
# SYNCLYRICS_LYRICS_DB=/config/lyrics_database
# SYNCLYRICS_ALBUM_ART_DB=/config/album_art_database
# SYNCLYRICS_CACHE_DIR=/config/cache
# SYNCLYRICS_LOGS_DIR=/config/logs