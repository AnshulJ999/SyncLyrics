# Server Configuration
QUART_SECRET_KEY=replace-this-with-a-random-secure-string

# Spotify API Credentials
SPOTIFY_CLIENT_ID=your-spotify-client-id-here
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret-here
# For best performance, host your own instances of https://github.com/akashrchandran/spotify-lyrics-api
SPOTIFY_BASE_URL=https://fake-spotify-lyrics-api-azure.vercel.app
SPOTIFY_REDIRECT_URI=http://localhost:9012/callback
SPOTIFY_TIMEOUT=10

LASTFM_API_KEY=your_api_key_here

# Artist Image Providers
# FanArt.tv API Key (optional - for high-quality artist images)
# Get your personal API key by making a $2 donation at https://fanart.tv/
# Without this key, FanArt.tv will be disabled but other sources (Deezer, TheAudioDB) will still work
# FANART_TV_API_KEY=your_fanart_api_key_here

# NetEase Settings
# NETEASE_COOKIE=your-netease-cookie-here
NETEASE_TIMEOUT=10
NETEASE_RETRIES=3

# Development Settings
DEBUG=false
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=synclyrics.log
LOG_TO_CONSOLE=true
LOG_DETAILED=false
PERFORMANCE_LOGGING=false

# System Settings
ENABLE_PARALLEL_FETCH=true
ENABLE_PROVIDER_STATS=false
ENABLE_AUTO_THEME=true
ENABLE_ALBUM_ART_COLORS=true
SHOW_LYRICS_SOURCE=true
SAVE_LYRICS_LOCALLY=true

# Cache Settings
CACHE_DURATION_DAYS=30
MAX_CACHE_SIZE_MB=50
MAX_MEMORY_CACHE_ITEMS=100
MAX_LYRICS_DB_SIZE_MB=100

# UI Settings
DEFAULT_THEME=dark  # Options: dark, light
MINIMAL_MODE=false 